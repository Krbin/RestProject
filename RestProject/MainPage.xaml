<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RestProject.MainPage"
             Title="APOD Gallery">
    <Grid>
        <Grid HeightRequest="200"
          WidthRequest="200" >
            <!-- Top 2/3: Image -->
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <Image Grid.Row="0"
                   Source="https://apod.nasa.gov/apod/image/2411/IC348_B3_2048.jpg"
                   Aspect="AspectFill"
                   />

            <!-- Bottom 1/3: Title and Date -->
            <StackLayout Grid.Row="1"
                         BackgroundColor="#88000000" Padding="10" VerticalOptions="Center" HorizontalOptions="Fill">
                <Label Text="12.1.2024"
                       FontSize="10"
                       TextColor="White"
                       VerticalOptions="End"
                       HorizontalOptions="Start"/>
                <Label Text="APOD 1 pppLoremIpsumLoremIpsumLoremIpsumLoremIpsum"
                       FontSize="12"
                       FontAttributes="Bold"
                       TextColor="White"
                       VerticalOptions="Start"
                       HorizontalOptions="Start"/>
            </StackLayout>
        </Grid>
    </Grid>

</ContentPage>

